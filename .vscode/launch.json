// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug via Make",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",  // или любой файл, чтобы VS Code активировал отладчик
      "console": "integratedTerminal",
      "preLaunchTask": "run-make",
      "justMyCode": false
    }
  ]
}